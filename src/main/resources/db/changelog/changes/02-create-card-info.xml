<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="2" author="kirill">
        <createTable tableName="card_info">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="card_number" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="card_holder" type="VARCHAR(150)">
                <constraints nullable="false"/>
            </column>
            <column name="card_expiry_date" type="DATE">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="card_info"
                baseColumnNames="user_id"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="fk_card_user"
                onDelete="CASCADE"/>

        <createIndex indexName="idx_card_user_id" tableName="card_info">
            <column name="user_id"/>
        </createIndex>
        <createIndex indexName="idx_card_number" tableName="card_info" unique="true">
            <column name="card_number"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
