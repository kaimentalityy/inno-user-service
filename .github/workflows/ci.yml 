name: CI

on:
  push:
    branches:
      - tasks/USR-1
  pull_request:
    branches:
      - tasks/USR-1

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Set up JDK 21
        uses: actions/setup-java@v3
        with:
          distribution: temurin
          java-version: 21
          cache: maven

      - name: Build & Test
        run: mvn clean verify -B